@model IEnumerable<MenuItem>

@if (Model.Count() > 0)
{
    <div class="col-12 mt-4 @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty).Replace(".",string.Empty) menu-shop">
        <div class="row">
            <h4 class="text-success" style="font-style:inherit">@Model.FirstOrDefault().Category.Name</h4>
        </div>
        <div class="container">
            @foreach (var item in Model)
            {
                <div class="border border-info col-12 m-1 p-2">
                    <div class="row">
                        <div class="col-md-3 col-sm-12">
                            <img src="@item.Image" width="100%" style="border: 1px solid #000000" />
                        </div>
                        <div class="col-md-9 col-sm-12">
                            <div class="row pr-3" style="font-size:20px;">
                                <div class="col-9">
                                    <label class="text-primary">@item.Name</label>
                                </div>
                                <div class="col-3 text-right">
                                    <label style="color:darkgreen; font-style:italic">@item.Price PLN</label>
                                </div>
                            </div>
                            <div class="row col-12 text-justify d-none d-md-block">
                                <p>@item.Description</p>
                            </div>
                            <div class="col-md-3 col-sm-12 offset-md-9">
                                <a asp-action="Buy" class="btn btn-primary form-control" asp-route-id="@item.Id">Buy</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}