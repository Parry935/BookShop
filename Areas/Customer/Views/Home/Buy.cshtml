@model BookShop.Models.ShopingCard
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Shoping</h3>
<hr />

<form method="post">
    <div class="container border p-3">
        <div class="row">
            <div class="col-md-5">
                <div class="mb-2">
                    <label class="text-info control-label" asp-for="MenuItem.Name"></label>:<br />
                    @Html.DisplayFor(model => model.MenuItem.Name)
                </div>
                <div class="mb-2">
                    <label class="text-info control-label" asp-for="MenuItem.Description"></label>:<br />
                    @Html.DisplayFor(model => model.MenuItem.Description)
                </div>
                <div class="mb-2">
                    <label class="text-info control-label" asp-for="MenuItem.Price"></label>:<br />
                    @Html.DisplayFor(model => model.MenuItem.Price)
                </div>
                <div class="mb-2">
                    <label class="text-info control-label" asp-for="MenuItem.CategoryId"></label>:<br />
                    @Html.DisplayFor(model => model.MenuItem.Category.Name)
                </div>
                <div class="mb-2">
                    <label class="text-info control-label" asp-for="Count"></label>:<br />
                    <input asp-for="Count" class="form-control"/>
                    <span asp-validation-for="Count" class="text-danger"></span>
                    
                </div>
                <div class="mb-2">
                    <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px; border: 1px solid black;" />
                </div>

            </div>
        </div>

        <input type="hidden" asp-for="MenuItemId"/>

        <div class="mb-1">
            <input type="submit" class="btn btn-success" value="Buy" />
        </div>

        <div class="mb-1">
            <a class="btn btn-info" asp-action="Index">Back to list</a>
        </div>
    </div>
</form>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}


